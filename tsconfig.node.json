{
  "extends": "./tsconfig.json",
  "include": ["server.ts", "tailwind.config.ts", "vite.config.ts", "websocket-server.ts", "types/**/*", "server/**/*"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "types": ["ES2022"],
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/server/*": ["./server/*"],
      "@/types/*": ["./types/*"]
    }
  }
}
